package com.pcwk.ehr.ed03;

import javax.swing.plaf.synth.SynthOptionPaneUI;

public class J07Ex08 {

	public static void main(String[] args) {
		// 1 + (-2) + 3 + (-4) + ... + 몇까지 더해야 총합이 100이상
		int x = 1;
		int y = 2;
		int sum = 0;
		while(x+y >= 100) {
			if(x % 2 != 0) {
				sum += x;
				x += 2;
			}else if(y % 2 == 0) {
				sum -= y;
				y += 2;
			}
			
		}
		System.out.println(sum);
		System.out.printf("%d, %d",x,y);
	}

}
