package com.pcwk.ehr.ed03;

import java.util.Scanner;

public class J06Ex07 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int input = 0;
		int check = 0;
		
		while(true) {
			int select = 0;
			System.out.println("----------------------------------");
			System.out.println("1.예금 | 2.출금 | 3.잔고 | 4.종료");
			System.out.println("----------------------------------");
			System.out.print("선택 > ");
			select = sc.nextInt();
			
			if(select == 1) {
				
				System.out.print("예금액 > ");
				input = sc.nextInt();
				check += input;
				continue;
			}else if(select == 2) {
				System.out.print("출금액 > ");
				input = sc.nextInt();
				check -= input;
				continue;
			}else if(select == 3) {
				System.out.printf("잔고 > %d%n",check);
				continue;
			}else if(select == 4){
				System.out.println("프로그램 종료\n");
				break;
			}
			
			
		}
		sc.close();
	}

}
