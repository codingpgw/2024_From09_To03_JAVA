package com.pcwk.ehr.ed02;
import java.util.Scanner;
public class IfElseIfElseEx03 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int score = 0;
		
		System.out.print("성적을 입력하세요 >   ");
		score = sc.nextInt();
		
		char grade = ' ';
		
		if(score >= 90) {
			grade = 'A';
			System.out.printf("당신의 성적은 %d 이므로 %c 학점입니다. \n",score,grade);
		}else if(score >= 80) {
			grade = 'B';
			System.out.printf("당신의 성적은 %d 이므로 %c 학점입니다. \n",score,grade);
		}else if(score >= 70) {
			grade = 'C';
			System.out.printf("당신의 성적은 %d 이므로 %c 학점입니다. \n",score,grade);
		}else if(score >= 60) {
			grade = 'D';
			System.out.printf("당신의 성적은 %d 이므로 %c 학점입니다. \n",score,grade);
		}else {
			grade = 'F';
			System.out.printf("당신의 성적은 %d 이므로 %c 학점입니다. \n",score,grade);
		}

	}

}
